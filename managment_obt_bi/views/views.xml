<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="managment_obt_bi.list">
      <field name="name">Seguimiento Terneros</field>
      <field name="model">managment_obt_bi_tracing</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="unidad_negocio_id"/>
          <field name="date_ingreso"/>
          <field name="date_sale"/>
          <field name="state"/>

        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="managment_obt_bi.form_mamanagment_obt_bi_form">
        <field name="name">form_mamanagment_obt_bi.form</field>
        <field name="model">managment_obt_bi_tracing</field>
        <field name="arch" type="xml">
            <form string="Seguimiento de Prodccion Terneros">
                <header>
                  <field name="state" widget="statusbar" statusbar_visible="engorde,corral_engorde,sale"/>

                </header>
                <sheet>
                  <group>
                    <group>
                        <!--<field name="sequence" widget="handle" />-->

                        <field name="name"/>
                        <field name="unidad_negocio_id"/>
                        <field name="date_ingreso"/>
                        <field name="date_sale"/>
                        <field name="dias_engorde"/>
                    </group>

                    <group col="4" string="Cantidad de Terneros">
                     <field name="cant_cow_ids" widget="one2many_list" nolabel="1">

                          <form>
                              <field name="unidad_negocio_id"/>
                              <field name="raza_ternero_id"/>                              
                              <field name="cantidad"/>

                          </form>
                          <tree  editable="bottom">
                              <field name="unidad_negocio_id"/>
                              <field name="raza_ternero_id"/>                              
                              <field name="cantidad" sum="Total"/>
                          </tree>

                        </field>
                      </group>

                    <group  string="Control de Peso">
                   
                     <field name="weight_cow_ids" widget="one2many_list"  nolabel="1">
                        <h1>Titulo</h1>
                          <form>
                              <field name="date_peso"/>
                              <field name="total_weight"/>

                          </form>
                          <tree  editable="bottom">
                              <field name="date_peso"/>
                              <field name="total_weight" sum="Total"/>
                              
                          </tree>

                        </field>

                      </group>

                    <group  string="Gastos" >
                     <field name="cost_cow_ids" widget="one2many_list" nolabel="1">

                          <form>
                              <field name="unidad_negocio_id"/>
                              <field name="amount_cost"/>
                              <field name="date_operations"/>
                              <field name="description"/>


                          </form>
                          <tree  editable="bottom" string="Sales Order Lines">
                              <field name="unidad_negocio_id"/>
                              <field name="amount_cost" sum="Total"/>
                              <field name="date_operations"/>
                              <field name="description"/>

                              
                          </tree>

                        </field>

                      </group>


                    <group  string="Trasnferencias de Unidades" >
                     <field name="transfer_cow_ids" widget="one2many_list" nolabel="1">

                          <form>
                              <field name="unidad_negocio_id_origen"/>
                              <field name="unidad_negocio_id_destino"/>
                              <field name="cantidad"/>
                              <field name="date_operations"/>

                          </form>
                          <tree  editable="bottom" string="Sales Order Lines">
                              <field name="unidad_negocio_id_origen"/>
                              <field name="unidad_negocio_id_destino" sum="Total"/>
                              <field name="cantidad"/>
                              <field name="date_operations"/>
                          </tree>

                        </field>

                      </group>
                      

                  </group>
                </sheet>
               <!--<div class="oe_chatter">
                      <field name="message_follower_ids" groups="base.group_user"/>
                      <field name="activity_ids"/>
                      <field name="message_ids"/>
               </div>-->
            </form>
        </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="managment_obt_bi.action_tracing_terneros">
      <field name="name">Seguimiento Terneros</field>
      <field name="res_model">managment_obt_bi_tracing</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- TERNEROS -->

    <record model="ir.ui.view" id="managment_obt_bi.list_cow">
      <field name="name">Terneros</field>
      <field name="model">managment_obt_bi_cow</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="number"/>
          <field name="create_date"/>
          
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="managment_obt_bi.action_terneros">
      <field name="name">Terneros</field>
      <field name="res_model">managment_obt_bi_cow</field>
      <field name="view_mode">tree,form</field>
    </record>




